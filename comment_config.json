{
  "exclude_dirs": [
    ".cache", ".vscode", "build", "bin", "boost",
    "docs", "examples", "LICENSES", "link", "scripts",
    "tools", "stm32SL_temp", "user/libraries"
  ],
  "exclude_files": [
    "README.MD", "README", "readme.md", "readme.txt",
    "LICENSE", "CMakeLists.txt"
